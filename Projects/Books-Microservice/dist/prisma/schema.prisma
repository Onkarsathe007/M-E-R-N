generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Book {
  id           Int     @id @unique @default(autoincrement())
  title        String  @db.VarChar(15)
  author       String  @db.VarChar(15)
  year         Int     @default(2025)
  is_available Boolean
}
